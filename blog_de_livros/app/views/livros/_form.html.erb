<%= form_with(model: livro) do |form| %>
  <% if livro.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(livro.errors.count, "error") %> Livro não Salvo:</h2>

      <ul>
        <% livro.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-center">
    <%= form.label :Título, style: "display: block" %>
    <%= form.text_field :titulo %>
  </div>

  <div class="text-center">
    <%= form.label :Autor, style: "display: block" %>
    <%= form.text_field :autor %>
  </div>

  <div class="text-center">
    <%= form.label :Nota, style: "display: block" %>
    <%= form.text_field :nota %>
  </div>

  <div class="text-center">
    <%= form.label :Descrição, style: "display: block" %>
    <%= form.text_area :descricao %>
  </div>

  <div class="text-center">
    <%= form.submit %>
  </div>
<% end %>
